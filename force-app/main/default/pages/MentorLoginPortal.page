                /* Clear floats after the columns */
                .row:after {
                content: "";
                display: table;
                clear: both;
                }
                
                /* vertical line */
                .vl {
                position: absolute;
                left: 50%;
                transform: translate(-50%);
                border: 2px solid #ddd;
                height: 175px;
                }
                
                /* text inside the vertical line */
                .vl-innertext {
                position: absolute;
                top: 50%;
                transform: translate(-50%, -50%);
